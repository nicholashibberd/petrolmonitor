<h1>Sign in</h1>
<div>
	<%= form_for(:user, :url => validate_users_path) do |f| %> 
		<div class="field">
			<%= f.label :email %><br />
			<%= f.text_field :email %>
		</div>
		<div class="field">
			<%= f.label :password %><br /> 
			<%= f.password_field :password %>
		</div> 
		<div class="update_button">
			<%= f.submit "Sign in" %> 
		</div>
		<% end %> 
</div>
<div class="add_new" id="new_user_signup">
<%= link_to "Register", new_user_path %>
</div>